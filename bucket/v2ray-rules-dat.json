            "https://github.com/Loyalsoldier/v2ray-rules-dat/releases/download/$version/geoip.dat",
            "https://github.com/Loyalsoldier/v2ray-rules-dat/releases/download/$version/geosite.dat"
        ],
        "hash": {
            "url": "$url.sha256sum"
        }
    }
